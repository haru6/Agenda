<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormularioActivy"
        android:orientation="vertical">

        <EditText
            android:id="@+id/formulario_name"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:hint="@string/nome"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/formulario_address"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:hint="@string/endereco" />

        <EditText
            android:id="@+id/formulario_phone"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:hint="@string/telefone" />

        <EditText
            android:id="@+id/formulario_email"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:hint="@string/email" />

        <!--RatingBar
            android:id="@+id/formulario_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:max="10"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_email" /-->

        <!--utton
            android:id="@+id/btn_save"
            android:layout_margin="8dp"
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/-->

    </LinearLayout>

</ScrollView>